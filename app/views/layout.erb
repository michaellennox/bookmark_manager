<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Bookmark Manager</title>
</head>
<body>
  <% if current_user %>
    Hi, <%= current_user.email %>
    <form method='post' action='/sessions'>
      <input type='hidden' name='_method' value='delete'>
      <input type='submit' value='Sign Out!'>
    </form>
  <% end %>
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
  <% if flash[:errors] %>
    <ul id='errors'>
      <% flash[:errors].each do |error|%>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <%= yield %>
</body>
</html>
